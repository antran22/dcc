{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    // Error rules
    "sort-imports": "error",
    "no-duplicate-imports": "error",
    "no-var": "error",
    "prefer-const": "error",
    "no-unused-vars": "error",
    "no-unreachable": "error",

    // Warn rules
    "no-console": "warn",
    "no-debugger": "warn"
  }
}
